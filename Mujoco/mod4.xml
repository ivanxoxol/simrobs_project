<?xml version="1.0" encoding="utf-8"?>
<mujoco model="wheeled_robot">

  <option timestep="1e-3" integrator="RK4" density="1.2" gravity="0 0 -9.81"/>

  <worldbody>

    <!-- Мир -->
    <light name="top" pos="0 0 3" dir="0 0 -1" directional="true"/>
    <geom name="floor" type="plane" size="10 10 0.1" 
          rgba="0.8 0.9 0.8 1" friction="1.0 0.005 0.0001"/>

    <!-- Основное тело робота -->
    <body name="base" pos="0 0 0.12">
      <freejoint name="base_joint"/>

      <!-- Геометрия корпуса -->
      <geom name="base_geom" type="box" size="0.03 0.05 0.10" mass="0.8"
            rgba="0.2 0.6 1 1"/>

      <!-- IMU (гироскоп + акселерометр) -->
      <site name="imu" pos="0 0 0" size="0.005"/>

      <!-- Левое колесо -->
      <body name="left_wheel" pos="0 0.065 -0.08">
        <joint name="left_wheel_hinge" type="hinge" axis="0 1 0"/>
        <geom name="left_wheel_geom" type="cylinder" size="0.04 0.01"
              euler="90 0 0" mass="0.3" rgba="0.3 0.3 0.3 1"/>
      </body>

      <!-- Правое колесо -->
      <body name="right_wheel" pos="0 -0.065 -0.08">
        <joint name="right_wheel_hinge" type="hinge" axis="0 1 0"/>
        <geom name="right_wheel_geom" type="cylinder" size="0.04 0.01"
              euler="90 0 0" mass="0.3" rgba="0.3 0.3 0.3 1"/>
      </body>

    </body>

  </worldbody>

  <actuator>
    <!--  Мотор левого колеса -->
    <motor name="left_motor"
           joint="left_wheel_hinge"
           ctrllimited="true"
           ctrlrange="-10 10"/>
    <!-- Мотор правого колеса -->
    <motor name="right_motor"
           joint="right_wheel_hinge"
           ctrllimited="true"
           ctrlrange="-10 10"/>
  </actuator>

  <sensor>
    <!-- Сенсор угловой скорости корпуса (гироскоп) -->
    <gyro name="gyro" site="imu"/>
    <!-- Акселерометр корпуса (ускорения по XYZ) -->
    <accelerometer name="acc" site="imu"/>
  </sensor>

</mujoco>
